@model GomelStateUniversity_Activity.Models.CreativityType

@{
    ViewData["Title"] = "Удаление";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center mt-5 mb-3">Вы уверены что хотите удалить?</h3>
<hr />

<div class="mb-3">
    <div class="my-3 mx-auto">
        <h5 class="text-center">Название: @Model.Name</h5>
    </div>

    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger my-2" /><br />
        <a class="btn btn-outline-danger my-2" href="javascript:history.back()">Вернуться</a>
    </form>
</div>

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Title"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>

      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
          var calendar = new FullCalendar.Calendar(calendarEl, {
            locale: '@Localizer["CalendarLocale"]',
            initialView: 'dayGridMonth',
            events: @Html.Raw(ViewData["Events"]),
            resources: @Html.Raw(ViewData["Resources"]),
            headerToolbar: {
                left: 'today prev,next',
                center: 'title',
                right: 'timeGridWeek,dayGridMonth,listMonth'
            },
        });
        calendar.render();
      });

</script>

<div class="text-center">
    <h4 class="display-4">@Localizer["University"]</h4><br>
</div>

<div>
    <a asp-controller="ApplicationForm" asp-action="UserApplications" class="btn btn-outline-info ml-3 mb-3">@Localizer["ApplicationsButton"]</a>

    <div id='calendar' class="text-center"></div>
</div>


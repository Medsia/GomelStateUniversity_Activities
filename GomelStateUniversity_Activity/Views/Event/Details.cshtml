@model GomelStateUniversity_Activity.Models.Event

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подробнее</h1>
@if (ViewData["Message"] != null)
{
    <h3>@ViewData["Message"]</h3>
}
<div>
    <h4>Мероприятие</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Дата
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class="col-sm-2">
            Количество мест(билетов)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketsCount)
        </dd>
        <dt class="col-sm-2">
            Цена билета
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketPrice)
        </dd>
        <dt class="col-sm-2">
            Подразделение
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subdivision.Name)
            (@Html.DisplayFor(model => model.Subdivision.Contacts))
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Subscribe" asp-route-id="@Model.Id">Записаться</a> |
    <a asp-action="UnSubscribe" asp-route-id="@Model.Id">Отписаться</a> |
    <a asp-action="SubscribeGroup" asp-route-id="@Model.Id" asp-route-amount="5">Записать группу</a> |
    <a asp-action="UnSubscribe" asp-route-id="@Model.Id">Отписать группу</a> |
    <a href="javascript:history.back()">Вернуться</a>
</div>

@model GomelStateUniversity_Activity.ViewModels.EventViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редактировать</h1>

<h4>Мероприятие</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Event.Id" />
            <div class="form-group">
                <label asp-for="Event.Name" class="control-label">Название</label>
                <input asp-for="Event.Name" class="form-control" />
                <span asp-validation-for="Event.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Description" class="control-label">Описание</label>
                <input asp-for="Event.Description" class="form-control" />
                <span asp-validation-for="Event.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.DateTime" class="control-label">Дата</label>
                <input asp-for="Event.DateTime" class="form-control" />
                <span asp-validation-for="Event.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.TicketsCount" class="control-label">Количество мест(билетов)</label>
                <input asp-for="Event.TicketsCount" class="form-control" />
                <span asp-validation-for="Event.TicketsCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.TicketPrice" class="control-label">Цена билета</label>
                <input asp-for="Event.TicketPrice" class="form-control" />
                <span asp-validation-for="Event.TicketPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Подразделение</label>
                @Html.DropDownList("Subdivision", Model.Subdivision, "Выберите подразделение", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    function SetSelectedSubdivision(Subdivision) {
        var subdivisions = document.getElementById('Subdivision'), sub, i;
        for (i = 0; i < subdivisions.length; i++) {
            sub = subdivisions[i];
            if (sub.innerText === Subdivision) {
                sub.selected = "true";
            }
        }
    }
    var eventsubdivision = "@Html.Raw(Model.SubdivisionName)";
    document.addEventListener('DOMContentLoaded', function () {
        SetSelectedSubdivision(eventsubdivision);
    });
</script>
<div>
    <a href="javascript:history.back()">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

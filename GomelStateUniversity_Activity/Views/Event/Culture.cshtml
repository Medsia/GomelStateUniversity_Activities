@model IEnumerable<GomelStateUniversity_Activity.Models.Event>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Мероприятия</h1>

@if(ViewData["Message"] != null)
            {
                <h3>@ViewData["Message"]</h3>
            }

<p>
    <a asp-action="Create">Создать мероприятие</a>
    <a asp-controller="Calendar" asp-action="CultureCalendar">Показать календарь</a>
    <div id='calendar'></div>
</p>
<a asp-action="IrrelevantEventsBySubdivision" asp-route-subdivisionId="1">Ранее</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Дата
            </th>
            <th>
                Количество мест(билетов)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(x => x.DateTime > DateTime.Now))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketsCount)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Подробнее</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model GomelStateUniversity_Activity.Models.Event

@{
    ViewData["Title"] = "Удаление мероприятия";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4 class="text-center">Вы уверены что хотите отменить мероприятие?</h4>
<hr />

@if (ViewData["Message"] != null)
{
    <h3>@ViewData["Message"]</h3>
}

<div class="row box-shadow mb-3">
    <br>
    <dl class="row col-sm-6 mx-auto">
        <dt class="col-sm-6">
            Название
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-6">
            Дата
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class="col-sm-6">
            Количество мест(билетов)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.TicketsCount)
        </dd>
        <dt class="col-sm-6">
            Цена билета
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.TicketPrice)
        </dd>
        <dt class="col-sm-6">
            Подразделение
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Subdivision.Name)
            (@Html.DisplayFor(model => model.Subdivision.Contacts))
        </dd>
        <dt class="col-sm-6">
            Описание
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <br>
</div>

<div class="row">
    <form asp-action="Delete" class="mr-4 ml-auto">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
    <a class="btn btn-outline-danger ml-4 mr-auto" href="javascript:history.back()">Вернуться</a>
</div>



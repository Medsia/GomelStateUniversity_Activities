@model IEnumerable<GomelStateUniversity_Activity.Models.Event>

@{
    ViewData["Title"] = "MassEventsCalendar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>

      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            locale: 'ru',
            events: @Html.Raw(ViewData["Events"]),
            resources: @Html.Raw(ViewData["Resources"]),
            headerToolbar: {
                left: 'today prev,next',
                center: 'title',
                right: 'timeGridWeek,dayGridMonth,listMonth'
            },
        });
        calendar.render();
      });

</script>
<div class="col-md-6">
    <a href="/Event"><h3>Перейти к списку</h3></a>
</div>
<div class="text-center">
    <h1 class="display-4">Гомельский Государственный Университет Имени Франциска Скорины</h1>
    <a asp-controller="Event" asp-action="MyEvents">Мои мероприятия</a>
    <div id='calendar'></div>
</div>

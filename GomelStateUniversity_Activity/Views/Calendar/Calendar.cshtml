
@{
    ViewData["Title"] = @ViewBag.PageName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>

      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
          var calendar = new FullCalendar.Calendar(calendarEl, {
            locale: 'ru',
            initialView: 'dayGridMonth',
            events: @Html.Raw(ViewData["Events"]),
            resources: @Html.Raw(ViewData["Resources"]),
            headerToolbar: {
                left: 'today prev,next',
                center: 'title',
                right: 'timeGridWeek,dayGridMonth,listMonth'
            },
        });
        calendar.render();
      });

</script>

<div class="text-center">
    <h4 class="display-4">@ViewBag.PageName</h4><br>
</div>

<div>
    <div id='calendar' class="text-center"></div>
</div>

@page
@model GomelStateUniversity_Activity.Areas.Functionality.Pages.Review.CreateReviewModel

@{
    ViewData["Title"] = "Отзыв";
}

<h1>@ViewData["Title"]</h1>


<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="form-group">
        <label asp-for="Input.currentTime"></label>
        <input disabled asp-for="Input.currentTime"  class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.currentUsersFullName"></label>
        <input disabled asp-for="@Model.currentUsersFullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Input.eventName"></label>
        @if (!string.IsNullOrEmpty(@Model.knownEventName))
        {
            <input disabled asp-for="Input.eventName" value="@Model.knownEventName" class="form-control" />
        }
        else
        {
            <select asp-for="Input.eventName" class="form-control">
                <option value="" selected>Выберите мероприятие</option>
                @foreach(var eventName in @Model.eventNames)
                {
                    <option value="@eventName">@eventName</option>
                }
            </select>
        }
        <span asp-validation-for="Input.eventName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.reviewText"></label>
        <textarea rows="5" asp-for="Input.reviewText" class="form-control"></textarea>
        <span asp-validation-for="Input.reviewText" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Оставить отзыв</button>
</form>
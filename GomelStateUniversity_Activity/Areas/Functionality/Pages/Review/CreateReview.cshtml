@page
@model GomelStateUniversity_Activity.Areas.Functionality.Pages.Review.CreateReviewModel

@{
    ViewData["Title"] = "Отзыв";
}

<h1>@ViewData["Title"]</h1>


<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="form-group">
        <label asp-for="@Model.currentTime"></label>
        <input disabled asp-for="@Model.currentTime"  class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.currentUsersFullName"></label>
        <input disabled asp-for="@Model.currentUsersFullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Input.eventId"></label>
        @if (@Model.knownEvent != null)
        {
            <input type="hidden" name="eventId" value="@Model.knownEvent.Id" />
            <input disabled value="@Model.knownEvent.Name" class="form-control" />
        }
        else
        {
            <select asp-for="Input.eventId" class="form-control">
                <option value="" selected>Выберите мероприятие</option>
                @foreach(var singleEvent in @Model.events)
                {
                    <option value="@singleEvent.Id">@singleEvent.Name</option>
                }
            </select>
        }
        <span asp-validation-for="Input.eventId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.reviewText"></label>
        <textarea rows="5" asp-for="Input.reviewText" class="form-control"></textarea>
        <span asp-validation-for="Input.reviewText" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Оставить отзыв</button>
</form>
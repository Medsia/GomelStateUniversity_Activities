@page
@model LaborApplicationFormsModel

@inject UserManager<ApplicationUser> _userManager

@{
    ViewData["Title"] = "Заявки на волонтерство";
    ViewData["ActivePage"] = ManageNavPages.LaborApplicationForms;
}

<h4>@ViewData["Title"]</h4>
<hr />

<div class="row mx-auto mb-4">
    <a asp-area="" asp-controller="LaborDirection" asp-action="Index" class="btn btn-outline-info mx-3 my-2">Редактировать список работ студ. отряда</a>
</div>

<div class="mb-5 row">
    <div class="col-md-6">
        <strong class="text-center">Вступление в организацию</strong>
        @foreach(var item in @Model.applicationForms)
        {
            @if(item.SubdivisionActivityTypeId == 4)
            {
                @foreach(var keyValue in @item.ApplicationParameters)
                {
                    <div class="box-shadow mb-3">
                        <div class="mx-3">
                            <div class="my-2"></div>
                            <div class="">Учащийся:</div>
                            <div class="form-control">@item.ApplicationUser.FullName</div>
                            <br>
                            <div class="">@keyValue.Key</div>
                            <div class="form-control">@keyValue.Value</div>
                            <br>
                        </div>
                    </div>
                    break;
                }
            }
        }
    </div>

    <div class="col-md-6">
        <strong class="text-center">Трудовое направление</strong>
        @foreach(var item in @Model.applicationForms)
        {
            @if(item.SubdivisionActivityTypeId == 5)
            {
                @foreach(var keyValue in @item.ApplicationParameters)
                {
                    <div class="box-shadow mb-3">
                        <div class="mx-3">
                            <div class="my-2"></div>
                            <div class="">Учащийся:</div>
                            <div class="form-control">@item.ApplicationUser.FullName</div>
                            <br>
                            <div class="">@keyValue.Key</div>
                            <div class="form-control">@keyValue.Value</div>
                            <br>
                        </div>
                    </div>
                    break;
                }
            }
        }
    </div>
</div>


<div class="col-md-6 mx-auto">
    <a class="btn btn-outline-danger" href="javascript:history.back()">Вернуться</a>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


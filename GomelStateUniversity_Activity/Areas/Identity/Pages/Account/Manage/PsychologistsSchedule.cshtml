@page
@model PsychologistsScheduleModel

@inject UserManager<ApplicationUser> _userManager

@{
    ViewData["Title"] = "Записи на приём";
    ViewData["ActivePage"] = ManageNavPages.PsychologistsSchedule;
}

<h4>@ViewData["Title"]</h4>
<hr />


<form class="col-md-9" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    @foreach(var item in @Model.scheduleItems)
    {
        <div class="box-shadow">
            <div class="mb-4 mx-3">
                <div class="form-group">
                    <p>@item.DateTime</p>
                    <hr>
                </div>
                <div class="form-group">
                    <p>@item.ApplicationUser.FullName</p>
                    <hr>
                </div>
            </div>
        </div>
    }
</form>


<div class="col-md-6 mx-auto">
    <a class="btn btn-outline-danger" href="javascript:history.back()">Вернуться</a>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


@page
@model RegisterModel

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Регистрация";
}

<h1>@ViewData["Title"]</h1>


<div class="">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h4>Создание аккаунта.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-md-4">
                <div class="my-4">
                    <div class="form-group">
                        <label asp-for="Input.Surname"></label>
                        <input asp-for="Input.Surname" class="form-control" />
                        <span asp-validation-for="Input.Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Name"></label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Patronym"></label>
                        <input asp-for="Input.Patronym" class="form-control" />
                        <span asp-validation-for="Input.Patronym" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="my-4">
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                
                <button type="submit" class="btn btn-primary">Регистрация</button>
            </div>

            <div class="col-md-4">
                <div class="my-4">
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Faculty"></label>
                        <input asp-for="Input.Faculty" class="form-control" />
                        <span asp-validation-for="Input.Faculty" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Year"></label>
                        <input asp-for="Input.Year" min="1" value="1" class="form-control" />
                        <span asp-validation-for="Input.Year" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Group"></label>
                        <input asp-for="Input.Group" class="form-control" />
                        <span asp-validation-for="Input.Group" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
